<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_10sdp">
        <ImageView
            android:id="@+id/iv_drugs_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/tv_drugs_name1"
            android:layout_toRightOf="@id/iv_drugs_image"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:text="阿莫西林"/>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_toRightOf="@id/iv_drugs_image"
            android:layout_below="@id/tv_drugs_name1"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/icon_money"/>
        <TextView
            android:id="@+id/tv_drugs_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_drugs_name1"
            android:layout_toRightOf="@id/iv_drugs_image"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="10.00"
            android:textColor="@color/red"
            android:textSize="@dimen/_20sdp"/>
        <TextView
            android:id="@+id/tv_drugs_k"
            android:layout_toRightOf="@id/iv_drugs_image"
            android:layout_below="@id/tv_drugs_price1"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存: "
            android:textSize="@dimen/_12sdp"/>
        <TextView
            android:id="@+id/tv_drugs_count1"
            android:layout_below="@id/tv_drugs_price1"
            android:layout_toRightOf="@id/tv_drugs_k"
            android:layout_marginTop="1.8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textSize="@dimen/_12sdp"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_toRightOf="@id/tv_drugs_count1"
            android:layout_below="@id/tv_drugs_price1"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:src="@drawable/icon_enter"/>
    </RelativeLayout>

</LinearLayout>