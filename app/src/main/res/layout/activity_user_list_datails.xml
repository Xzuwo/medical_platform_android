<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.side_menu.SidePersonalFragment">

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/detail_head"
        android:background="@drawable/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/Detail_back"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户详情信息"
                android:textSize="30sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/Login_img_item_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp">
                <ImageView
                    android:id="@+id/detail_img_item_images"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/main_user"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击修改用户头像"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/count"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="用户账号:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/detail_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/name"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="用户姓名:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/sex"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="用户性别:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/detail_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:src="@drawable/birthdate"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="用户生日:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/detail_birthdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:src="@drawable/mecidation_history"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/click_Change_medication"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="病历:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/detail_medication_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/health"/>
                <TextView
                    android:id="@+id/Personal_Health_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击查看健康状况"
                    android:textSize="30sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>