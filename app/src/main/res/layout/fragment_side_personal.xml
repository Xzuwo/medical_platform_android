<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.side_menu.SidePersonalFragment">



    <LinearLayout
        android:id="@+id/personal_head"
        android:background="@drawable/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Personal_back"
            android:src="@drawable/back"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_marginTop="-80dp"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="40sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/Login_img_item_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/personal_img_item_images"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/main_user"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/personal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点此登录"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/personal_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎来到此平台"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="点击修改头像"/>
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/work"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="用户职业:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/personal_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/sex"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="用户性别:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/personal_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:src="@drawable/birthdate"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="用户生日:"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/personal_birthdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="430dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:src="@drawable/mecidation_history"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/click_Change_medication"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="病历:(点击修改)"
                    android:layout_marginLeft="20dp"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/personal_medication_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>